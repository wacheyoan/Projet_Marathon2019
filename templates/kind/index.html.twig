        <h1>Kind index</h1>
    <div class="row">
        {% for key,serie in series %}
            <div class="col-lg-3">
            <p>{{ key }}</p>
            <a href="{{ path('series_show',{id:serie.id}) }}"><img src="{{ base_url~serie.image }}"></a>
