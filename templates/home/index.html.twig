{% extends 'base.html.twig' %}
{% import 'macros.html.twig' as macro %}

{% block title %}Home Page !{% endblock %}

{% block body %}
<div class="container">
    {% if serieWithMostComments %}
        <div class="row">
            <div class="col-lg-12">
                     <h1>Série la plus commentée : </h1>
                     {{ macro.serieView(serieWithMostComments) }}
            </div>
        </div>
    {% endif %}
        {% if seriesRandom %}
            <div class="row">
                    {% for serie in seriesRandom %}
                         <div class="col-lg-4">
                         {{ macro.serieView(serie) }}
                        </div>
                    {% endfor %}
            </div>
        {% endif %}
{% endblock %}
